<h1><%= @task.title %></h1>
<%= @task.details %>
<% unless @task.completed %>
  <p>
  <input type="checkbox" <%= 'checked' if @task.completed %>>
  This task is not completed yet
  </p>
<% else %>
  <p>
  <input type="checkbox" <%= 'checked' if @task.completed %>>
  This task is already completed!
  </p>
<% end %>

<%= link_to 'Back', tasks_path %>
<%= link_to 'Edit this task', edit_task_path %>
